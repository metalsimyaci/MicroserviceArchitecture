@model IEnumerable<AuctionViewModel>
@{
	ViewData["Title"] = "Index";
	Layout = "_Layout";
}

<h1>Index</h1>
<div class="row">
	<div class="col-12">
		<div class="card">
			<div class="card-header"></div>
			<div class="card-body">
				<table id="example1" class="table table-bordered table-hover">
					<thead>
					<tr>
						<th>Name</th>
						<th>Description</th>
						<th>Quantity</th>
						<th>Start Date</th>
						<th></th>
					</tr>
					</thead>
					<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.Name</td>
							<td>@item.Description</td>
							<td>@item.Quantity</td>
							<td>@item.StartedAt.ToShortDateString()</td>
							<td>@item.FinishedAt.ToShortDateString()</td>
							<td>
								<a asp-controller="Auction" asp-action="Detail" asp-route-Id="@item.Id">Detial</a>
							</td>
						</tr>
					}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
