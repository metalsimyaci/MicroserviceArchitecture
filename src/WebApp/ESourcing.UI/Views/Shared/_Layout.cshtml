@using Microsoft.AspNetCore.Identity
@using ESourcing.Core.Entities
@inject SignInManager<AppUser> signInManager
@inject UserManager<AppUser> userManager

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title</title>

	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback" />
	<link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap-reboot.min.css" />
	<link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css.map" />
</head>
<body>
<div class="container">
	<nav>
		<ul class="nav nav-pills">
			<li class="nav-item"><a class="nav-link"  asp-controller="Home" asp-action="Index">Home</a></li>
			@if (signInManager.IsSignedIn(User))
			{
				<li class="nav-item">@userManager.GetUserName(User)</li>
				<li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Logout">Logout</a></li>
			}
			else
			{
				<li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="SignUp">SignUp</a></li>
				<li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Login">Login</a></li>
			}
		</ul>
	</nav>

	<section>
		@RenderBody()
	</section>
	<footer>&copy;copy 2021 KAOS.co</footer>
</div>

	<script type="text/javascript" src="~/lib/jquery/jquery.min.js"></script>
	<script type="text/javascript" src="~/lib/jquery/jquery.min.map"></script>

	<script type="text/javascript" src="~/lib/popper.js/cjs/popper.min.js"></script>
	<script type="text/javascript" src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
	<script type="text/javascript" src="~/lib/bootstrap/js/bootstrap.bundle.min.js.map"></script>

	<script type="text/javascript" src="~/lib/jquery-validate/jquery.validate.min.js"></script>
	<script type="text/javascript" src="~/lib/jquery-validate/additional-methods.min.js"></script>
	<script type="text/javascript" src="~/lib/jquery-validate/localization/messages_tr.min.js"></script>

	<script type="text/javascript" src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>


</html>